<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Incredible Investors!!!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="../css/style.css">

    <!-- https://fontawesome.com/search?o=r&ic=free&s=regular&ip=classic -->
</head>

<body>

    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success border-bottom">
        <div class="container-fluid">

            <a class="navbar-brand d-flex align-items-center ps-3" href="/">
                <img src="/images/logo.png" alt="Incredible Investors!!!" width="100" height="50" class="me-2">
            </a>

            <!-- Toggler Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <% if(!user) { %>
                        <li class="nav-item"><a class="nav-link" href="/users/new">Sign Up</a></li>
                        <li class="nav-item"><a class="nav-link" href="/users/login">Login</a></li>
                        <% } else { %>
                            <li class="nav-item"><a class="nav-link" href="/events/new">New Group Therapy</a></li>
                            <li class="nav-item"><a class="nav-link" href="/users/profile"><%=user.firstname%>'s Profile</a></li>
                            <li class="nav-item"><a class="nav-link" href="/users/logout">Logout</a></li>
                            <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container-fluid">
            <div class="" id="navbarSite">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/events">Group Therapies</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <% if(errorMessages.length> 0) {%>
        <% errorMessages.forEach(message=>{%>
            <div class='bg-danger text-white ms-3 me-3 border-top'>
                <%=message%>
            </div>
            <%});%>
                <%}%>

                    <% if(successMessages.length> 0) {%>

                        <% successMessages.forEach(message=>{%>
                            <div class='bg-success text-white ms-3 me-3 border-top'>
                                <%=message%>
                            </div>
                            <%});%>
                                <%}%>