<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>UNCC Healthcare Group Therapy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="../css/style.css">
</head>

<body>

    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center ps-3" href="/">
                <img src="/images/logo.png" alt="UNCC Healthcare Group Therapy" width="60" height="35" class="me-2" style="object-fit: contain;">
                <span class="d-none d-md-inline">UNCC Healthcare</span>
            </a>

            <!-- Toggler Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/events">
                            <i class="fas fa-users me-1"></i>Group Therapies
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <% if(!user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/users/new">
                                <i class="fas fa-user-plus me-1"></i>Sign Up
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/users/login">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/events/new">
                                <i class="fas fa-plus-circle me-1"></i>New Group Therapy
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/users/profile">
                                <i class="fas fa-user me-1"></i><%=user.firstname%>'s Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/users/logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if(errorMessages.length> 0) {%>
        <% errorMessages.forEach(message=>{%>
            <div class='alert-modern bg-danger text-white'>
                <i class="fas fa-exclamation-circle me-2"></i><%=message%>
            </div>
        <%});%>
    <%}%>

    <% if(successMessages.length> 0) {%>
        <% successMessages.forEach(message=>{%>
            <div class='alert-modern bg-success text-white'>
                <i class="fas fa-check-circle me-2"></i><%=message%>
            </div>
        <%});%>
    <%}%>